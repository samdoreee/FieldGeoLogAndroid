<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:orientation="vertical"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OneRecordActivity">

    <LinearLayout
        android:id="@+id/toppart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/photo1"
            app:layout_constraintStart_toStartOf="@id/constraintLayout2"
            app:layout_constraintTop_toTopOf="@id/constraintLayout2"
            android:contentDescription="TODO" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="03.27.청주 기반 화강암 조사"
                android:gravity="center_vertical"
                android:id="@+id/title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/item_border"
                android:minHeight="35dp"
                android:textSize="22sp"
                android:textStyle="bold"/>
            <TextView
                android:text="2023.01.02"
                android:id="@+id/date"
                android:gravity="center_vertical"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/item_border"
                android:minHeight="35dp"
                android:textSize="17sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/mapimage"
        android:src="@drawable/map"
        app:layout_constraintTop_toBottomOf="@+id/toppart"
        android:layout_width="match_parent"
        android:layout_height="595dp"
        android:scaleType="centerCrop">
    </ImageView>

    <!--<net.daum.mf.map.api.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0px"
        app:layout_constraintBottom_toTopOf="@+id/incslayout">
    </net.daum.mf.map.api.MapView>-->

    <ListView
        android:background="@drawable/window_radius_top"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/twobtn">
    </ListView>

    <LinearLayout
        android:weightSum="2"
        android:id="@+id/twobtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/mapimage">
        <Button
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@color/orange_2"
            android:id="@+id/btn_record_start"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToPDF"
            android:textAllCaps="false"/>
        <Button
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@color/gray_1"
            android:id="@+id/btn_start"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="게시글 등록" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>