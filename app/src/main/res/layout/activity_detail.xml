<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/mapsample2"></ImageView>

        <!--header-->
        <FrameLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/header_background"
                ></ImageView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                <ImageButton
                    android:id="@+id/back_to_home_btn"
                    android:layout_marginStart="20dp"
                    android:background="#00FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/chevron_left"></ImageButton>
                <TextView
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기록 공유"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/Neo2"></TextView>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </FrameLayout>

        <FrameLayout
            app:layout_constraintBottom_toTopOf="@+id/card"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/header_background2"
                ></ImageView>
            <TextView
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="김정현"
                style="@style/Neo3"
                android:textColor="@color/G2"
                android:fontFamily="@font/nanumsquareneoehv"></TextView>
        </FrameLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/record_title"
                    style="@style/Neo2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="청주지역 기초 지질 조사"
                    android:textColor="@color/Black"
                    android:layout_gravity="bottom|center_horizontal"
                    ></TextView>
                <TextView
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:id="@+id/location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Neo4"
                    android:text="충청북도 청주시 서원구 개신동 265-1"></TextView>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Neo4"
                    android:text="2022년 11월 24일"/>


                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Neo4"
                    android:text="맑음 : 강우량 보통 남서풍"></TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/Gray2"
                    android:layout_marginVertical="5dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/G2"
                        app:cardCornerRadius="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="주향"
                            android:textAlignment="center"
                            android:layout_margin="3dp"
                            android:textColor="@color/White"
                            android:textStyle="bold"></TextView>
                        <EditText
                            android:background="@color/White"
                            android:layout_gravity="bottom|center_horizontal"
                            android:id="@+id/strike"
                            style="@style/Neo4"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:hint="40NW"
                            android:textStyle="bold"
                            android:textAlignment="center"></EditText>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/G2"
                        app:cardCornerRadius="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="경사"
                            android:textAlignment="center"
                            android:layout_margin="3dp"
                            android:textColor="@color/White"
                            android:textStyle="bold"></TextView>
                        <EditText
                            android:background="@color/White"
                            android:layout_gravity="bottom|center_horizontal"
                            android:id="@+id/dip"
                            style="@style/Neo4"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:hint="65"
                            android:textStyle="bold"
                            android:textAlignment="center"></EditText>
                    </androidx.cardview.widget.CardView>                    <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/G2"
                    app:cardCornerRadius="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:text="암종"
                        android:textAlignment="center"
                        android:textColor="@color/White"
                        android:textStyle="bold"></TextView>
                    <EditText
                        android:background="@color/White"
                        android:layout_gravity="bottom|center_horizontal"
                        android:id="@+id/rocktype"
                        style="@style/Neo4"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:hint="화강섬록"
                        android:textStyle="bold"
                        android:textAlignment="center"></EditText>
                </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="5dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/G2"
                        app:cardCornerRadius="10dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="지질구조"
                            android:textAlignment="center"
                            android:layout_margin="3dp"
                            android:textColor="@color/White"
                            android:textStyle="bold"></TextView>
                        <EditText
                            android:background="@color/White"
                            android:layout_gravity="bottom|center_horizontal"
                            android:id="@+id/geo_struct"
                            style="@style/Neo4"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:hint="습곡"
                            android:textStyle="bold"
                            android:textAlignment="center"></EditText>
                    </androidx.cardview.widget.CardView>




                </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/memoconstraintLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:id="@+id/photo_container"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:layout_width="match_parent"
                            android:layout_height="90dp">

                            <androidx.cardview.widget.CardView
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="10dp">
                                <ImageView
                                    android:src="@drawable/geo11"
                                    android:layout_width="wrap_content"
                                    android:layout_height="90dp"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center">
                                </ImageView>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="10dp">
                                <ImageView
                                    android:src="@drawable/geo8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="90dp"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center">
                                </ImageView>
                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_margin="5dp"
                                android:id="@+id/photo_create_btn"
                                app:cardBackgroundColor="@color/White"
                                android:layout_weight="1"
                                android:layout_width="90dp"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="10dp">
                                <ImageView
                                    android:src="@drawable/geo1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="90dp"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center">
                                </ImageView>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/memo_card"
                            android:backgroundTint="@color/G7"
                            app:cardCornerRadius="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/photo_container">
                            <EditText
                                android:background="@android:color/transparent"
                                android:padding="10dp"
                                android:lineSpacingExtra="5sp"
                                android:hint="청주 기반암 기초 지질 조사\n충청북도 청주시 화강암 지역에 대한 기초 지질 조사 실시\n불균질한 석영 관입과 함께 화강암, 화강섬록암 관찰 가능"
                                android:id="@+id/memo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                style="@style/Neo4"/>
                        </androidx.cardview.widget.CardView>
                        <!--댓글-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_marginVertical="10dp"
                            android:id="@+id/comment1"
                            app:layout_constraintTop_toBottomOf="@+id/memo_card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profile"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@drawable/circle"
                                android:layout_margin="10dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"></de.hdodenhof.circleimageview.CircleImageView>

                            <LinearLayout
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/profile"
                                app:layout_constraintTop_toTopOf="parent">
                                <TextView
                                    style="@style/Neo3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="풍혜림"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/date"></TextView>
                                <TextView
                                    style="@style/Neo4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="2022.11.28"
                                    android:layout_marginBottom="5dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/date"></TextView>
                                <TextView
                                    style="@style/Neo4"
                                    android:fontFamily="@font/nanumsquareneodeb"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="김정현님, 청주 지역 조사 기록 잘 보고 갑니다👍 다음에 같이 조사갈 수 있으면 좋겠어요! :>"></TextView>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_marginVertical="10dp"
                            app:layout_constraintTop_toBottomOf="@+id/comment1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/profile2"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@drawable/circle"
                                android:layout_margin="10dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"></de.hdodenhof.circleimageview.CircleImageView>

                            <LinearLayout
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:layout_marginTop="10dp"
                                android:layout_marginStart="10dp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/profile2"
                                app:layout_constraintTop_toTopOf="parent">
                                <TextView
                                    style="@style/Neo3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="이진영"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/date"></TextView>
                                <TextView
                                    style="@style/Neo4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="2022.11.30"
                                    android:layout_marginBottom="5dp"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/date"></TextView>
                                <TextView
                                    style="@style/Neo4"
                                    android:fontFamily="@font/nanumsquareneodeb"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="멋지다 정현아! :>"></TextView>
                            </LinearLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"></LinearLayout>
            </LinearLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>