<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/item_border">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/item_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/samdoree"
            app:layout_constraintStart_toStartOf="@id/constraintLayout2"
            app:layout_constraintTop_toTopOf="@id/constraintLayout2" />

        <EditText
            android:id="@+id/title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/item_border"
            android:hint="Enter the title"
            android:minHeight="35dp"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imageView"
            app:layout_constraintTop_toTopOf="@id/constraintLayout2" />

        <EditText
            android:id="@+id/date"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="@drawable/item_border"
            android:hint="Enter the date"
            android:minHeight="35dp"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imageView"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <EditText
            android:id="@+id/location"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/item_border"
            android:minHeight="30dp"
            android:hint="Location Information"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView" />

        <EditText
            android:id="@+id/weather"
            android:layout_width="78dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/item_border"
            android:minHeight="30dp"
            android:hint="Weat"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@id/location"
            app:layout_constraintTop_toBottomOf="@id/date" />

        <EditText
            android:id="@+id/strike"
            android:layout_width="187dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/item_border"
            android:minHeight="30dp"
            android:hint="Strike"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/constraintLayout2"
            app:layout_constraintTop_toBottomOf="@id/location" />

        <EditText
            android:id="@+id/dip"
            android:layout_width="187dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/item_border"
            android:minHeight="30dp"
            android:hint="Dip"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/constraintLayout2"
            app:layout_constraintTop_toBottomOf="@id/location" />

        <EditText
            android:id="@+id/rocktype"
            android:layout_width="187dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/item_border"
            android:minHeight="30dp"
            android:hint="Rock Type"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/constraintLayout2"
            app:layout_constraintTop_toBottomOf="@id/strike" />

        <EditText
            android:id="@+id/geo_struct"
            android:layout_width="187dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/item_border"
            android:minHeight="30dp"
            android:hint="Dip"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@id/constraintLayout2"
            app:layout_constraintTop_toBottomOf="@id/dip" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/memoconstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/item_border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout2">

        <ImageButton
            android:id="@+id/camerabtn"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/item_border"
            android:src="@drawable/add_photo"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="@id/memoconstraintLayout"
            app:layout_constraintTop_toTopOf="@id/memoconstraintLayout" />

        <ImageView
            android:id="@+id/photo0"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/item_border"
            app:layout_constraintStart_toEndOf="@id/camerabtn"
            app:layout_constraintTop_toTopOf="@id/memoconstraintLayout" />

        <ImageView
            android:id="@+id/photo1"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/item_border"
            app:layout_constraintStart_toEndOf="@id/photo0"
            app:layout_constraintTop_toTopOf="@id/memoconstraintLayout" />

        <ImageView
            android:id="@+id/photo2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/item_border"
            app:layout_constraintStart_toEndOf="@id/photo1"
            app:layout_constraintTop_toTopOf="@id/memoconstraintLayout" />


        <EditText
            android:id="@+id/memo"
            android:layout_width="375dp"
            android:layout_height="107dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/item_border"
            android:hint="Location Information"
            android:minHeight="30dp"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/camerabtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/constraintLayout2" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:text="Cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/constraintLayout2" />


</androidx.constraintlayout.widget.ConstraintLayout>