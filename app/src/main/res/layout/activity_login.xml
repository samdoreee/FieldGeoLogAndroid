<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/ancestor"
    android:layout_margin="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/logo"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </ImageView>



    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/kakao_login"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        tools:layout_editor_absoluteX="0dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnKakaoLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_ripple_kakao_login"
            android:paddingVertical="14dp"
            android:text="카카오 로그인"
            android:textColor="#D9000000"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>



    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/info"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@+id/kakao_login"
        tools:layout_editor_absoluteX="0dp"
        android:orientation="vertical">
        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="bottom"
            android:text="E-mail"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </TextView>
        <EditText
            android:hint="1234@email.com"
            android:backgroundTint="@color/orange_1"
            android:background="@drawable/item_border"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </EditText>
        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="bottom"
            android:text="비밀번호"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="35dp">
        </TextView>
        <EditText
            android:hint="**********"
            android:backgroundTint="@color/gray_1"
            android:background="@drawable/item_border"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:weightSum="2"
        android:id="@+id/incslayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/ancestor">
        <Button
            android:textStyle="bold"
            android:layout_weight="1"
            android:backgroundTint="@color/orange_2"
            android:background="@color/orange_2"
            android:id="@+id/btn_login"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:textAllCaps="false"/>
        <Button
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@color/gray_1"
            android:id="@+id/btn_signup"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="회원가입"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>