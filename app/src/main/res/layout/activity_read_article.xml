<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ancestor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/item_border">

        <LinearLayout
            android:id="@+id/authortitle"
            app:layout_constraintTop_toTopOf="@+id/ancestor"
            android:weightSum="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="김정현"
                android:background="@color/orange_2"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="2dp">
            </TextView>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2023년 11월 22일"
                android:background="@drawable/item_border"
                android:textStyle="bold"
                android:padding="2dp">
            </TextView>
        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="10dp"
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/item_border"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/authortitle">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/photo3"
                app:layout_constraintStart_toStartOf="@id/constraintLayout2"
                app:layout_constraintTop_toTopOf="@id/constraintLayout2" />

            <TextView
                android:text="청주 기반암 조사"
                android:id="@+id/title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/item_border"
                android:minHeight="35dp"
                android:gravity="center_vertical"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toTopOf="@id/constraintLayout2" />

            <TextView
                android:text="2023.01.23"
                android:id="@+id/date"
                android:layout_width="300dp"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/item_border"
                android:minHeight="35dp"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/imageView"
                app:layout_constraintTop_toBottomOf="@id/title" />

            <TextView
                android:text="청주시 서원구 개신동 26-51"
                android:id="@+id/location"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/item_border"
                android:minHeight="30dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView" />

            <TextView
                android:text="맑음"
                android:gravity="center_vertical"
                android:id="@+id/weather"
                android:layout_width="78dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/item_border"
                android:minHeight="30dp"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/location"
                app:layout_constraintTop_toBottomOf="@id/date" />

            <TextView
                android:backgroundTint="@color/orange_1"
                android:gravity="center"
                android:id="@+id/strike"
                android:layout_width="187dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/item_border"
                android:minHeight="30dp"
                android:text="Strike"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/constraintLayout2"
                app:layout_constraintTop_toBottomOf="@id/location"/>

            <TextView
                android:backgroundTint="@color/orange_1"
                android:gravity="center"
                android:id="@+id/dip"
                android:layout_width="187dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/item_border"
                android:minHeight="30dp"
                android:text="Dip"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@id/constraintLayout2"
                app:layout_constraintTop_toBottomOf="@id/location" />

            <TextView
                android:backgroundTint="@color/orange_1"
                android:gravity="center"
                android:id="@+id/rocktype"
                android:layout_width="187dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/item_border"
                android:minHeight="30dp"
                android:text="Rock Type"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/constraintLayout2"
                app:layout_constraintTop_toBottomOf="@id/strike" />

            <TextView
                android:backgroundTint="@color/orange_1"
                android:gravity="center"
                android:id="@+id/geo_struct"
                android:layout_width="187dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/item_border"
                android:minHeight="30dp"
                android:text="Geo Structure"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@id/constraintLayout2"
                app:layout_constraintTop_toBottomOf="@id/dip" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/item_border"
            android:id="@+id/memoconstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/constraintLayout2">
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="5dp"
                app:layout_constraintTop_toTopOf="@+id/memoconstraintLayout">

                <ImageView
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/photo1"
                    android:layout_gravity="center">
                </ImageView>
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/photo2"
                    android:layout_gravity="center">
                </ImageView>
                <ImageView
                    android:layout_weight="1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/photo3"
                    android:layout_gravity="center">
                </ImageView>

            </LinearLayout>
            <EditText
                android:id="@+id/memo"
                android:layout_width="375dp"
                android:layout_height="107dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="96dp"
                android:background="@drawable/item_border"
                android:hint="Location Information"
                android:minHeight="30dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.166"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/memoconstraintLayout" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>