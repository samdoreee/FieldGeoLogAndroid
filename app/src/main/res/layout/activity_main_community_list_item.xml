<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">
    <!--배경카드뷰-->
    <androidx.cardview.widget.CardView
        android:id="@+id/backgorund"
        app:cardBackgroundColor="#00FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:src="@drawable/white_gradation_background"
            android:id="@+id/gradation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop">
        </ImageView>
    </androidx.cardview.widget.CardView>
    <!--설명카드뷰-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">
        <androidx.cardview.widget.CardView
            android:id="@+id/thumbnail_container"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp">
            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/photo1"
                android:scaleType="centerCrop">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/title"
            style="@style/Neo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="제목입니다"
            app:layout_constraintStart_toEndOf="@+id/thumbnail_container"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/pin"
            app:layout_constraintStart_toEndOf="@+id/thumbnail_container"
            app:layout_constraintTop_toBottomOf="@+id/title"></ImageView>

        <TextView
            android:id="@+id/location"
            style="@style/Neo4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:text="위치입니다"
            app:layout_constraintStart_toEndOf="@+id/icon"
            app:layout_constraintTop_toBottomOf="@+id/title"></TextView>

        <TextView
            android:id="@+id/date"
            style="@style/Neo4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="날짜입니다"
            app:layout_constraintBottom_toBottomOf="@+id/container"
            app:layout_constraintEnd_toEndOf="@+id/container"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

