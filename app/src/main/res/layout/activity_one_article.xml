<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_margin="5dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OneRecordActivity"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/authortitle"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="김정현"
            android:background="@color/orange_2"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="2dp">
        </TextView>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="2023년 11월 22일"
            android:background="@drawable/item_border"
            android:textStyle="bold"
            android:padding="2dp">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/toppart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/authortitle">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/photo1"
            app:layout_constraintStart_toStartOf="@id/constraintLayout2"
            app:layout_constraintTop_toTopOf="@id/constraintLayout2"
            android:contentDescription="TODO" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="03.27.청주 기반 화강암 조사"
                android:gravity="center_vertical"
                android:id="@+id/title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/item_border"
                android:minHeight="35dp"
                android:textSize="22sp"
                android:textStyle="bold"/>
            <TextView
                android:text="2023.01.02"
                android:id="@+id/date"
                android:gravity="center_vertical"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/item_border"
                android:minHeight="35dp"
                android:textSize="17sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/mapimage"
        android:src="@drawable/map"
        app:layout_constraintTop_toBottomOf="@+id/toppart"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:scaleType="centerCrop">
    </ImageView>

    <!--<net.daum.mf.map.api.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0px"
        app:layout_constraintBottom_toTopOf="@+id/incslayout">
    </net.daum.mf.map.api.MapView>-->

    <ListView
        android:background="@drawable/window_radius_top"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="30dp"
        app:layout_constraintBottom_toTopOf="@+id/twobtn">
    </ListView>

    <LinearLayout
        android:weightSum="2"
        android:id="@+id/twobtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/mapimage">
        <Button
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@color/orange_2"
            android:id="@+id/btn_record_start"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ToPDF"
            android:textAllCaps="false"/>
        <Button
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@color/gray_1"
            android:id="@+id/btn_start"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="게시글 등록" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/item_border"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:id="@+id/commentwrite"
        app:layout_constraintTop_toBottomOf="@+id/twobtn"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="김정현"
                android:background="@color/orange_2"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="2dp">
            </TextView>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2023년 11월 22일"
                android:background="@drawable/item_border"
                android:textStyle="bold"
                android:padding="2dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="comment를 남겨주세요"
                android:textStyle="bold"
                android:padding="2dp">
            </TextView>
            <Button
                android:background="@color/yellow"
                android:textSize="10sp"
                android:text="save"
                android:layout_width="wrap_content"
                android:layout_height="30dp">

            </Button>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/item_border"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:id="@+id/comment"
        app:layout_constraintTop_toBottomOf="@+id/commentwrite"
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="풍혜림"
                android:background="@color/orange_2"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="2dp">
            </TextView>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2023년 12월 25일"
                android:background="@drawable/item_border"
                android:textStyle="bold"
                android:padding="2dp">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="청주 조사 전 잘 참고합니다! :D"
                android:textStyle="bold"
                android:padding="2dp">
            </TextView>
            <Button
                android:background="@color/orange_1"
                android:textSize="10sp"
                android:text="modify"
                android:layout_width="45dp"
                android:layout_height="30dp">

            </Button>
            <Button
                android:background="@color/gray_1"
                android:textSize="10sp"
                android:text="del"
                android:layout_width="35dp"
                android:layout_height="30dp">

            </Button>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>