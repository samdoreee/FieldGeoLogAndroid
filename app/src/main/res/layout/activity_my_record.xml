<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyRecordActivity"
    android:background="@color/White">

    <TextView
        android:id="@+id/myrecordtitle"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="나의 RECORD"
        android:textSize="23sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp"
        android:background="@color/Gray1">
    </TextView>
    <LinearLayout
        android:weightSum="5"
        android:background="@drawable/item_border"
        android:id="@+id/myrecordmiddle"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/myrecordtitle">

        <TextView
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:text="정 렬"
            android:textSize="17sp"
            android:textStyle="bold"></TextView>

        <EditText
            android:hint="키워드를 입력하세요"
            android:layout_weight="4.5"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:background="@drawable/item_border"
            android:padding="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp">
        </EditText>
    </LinearLayout>

    <ListView
        android:layout_margin="10dp"
        android:id="@+id/myrecordlistview"
        android:layout_width="match_parent"
        android:layout_height="575dp"
        app:layout_constraintTop_toBottomOf="@+id/myrecordmiddle">
    </ListView>

</androidx.constraintlayout.widget.ConstraintLayout>